{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sites_audio_azure_functions_name": {
      "defaultValue": "audio-functions",
      "type": "String"
    },
    "serverfarms_audio_azure_functions_plan_name": {
      "defaultValue": "audio-plan",
      "type": "String"
    },
    "storageAccounts_audioazurefunctionstore_name": {
      "defaultValue": "audiostore",
      "type": "String"
    },
    "components_audio_azure_functions_insights_name": {
      "defaultValue": "audio-insights",
      "type": "String"
    },
    "accounts_audio_azure_functions_speech_name": {
      "defaultValue": "audio-speech",
      "type": "String"
    },
    "SpeechLanguage": {
      "defaultValue": "en-US",
      "type": "String"
    }
  },
  "variables": {
    "contentShareName": "[toLower(parameters('sites_audio_azure_functions_name'))]",
    "repoUrl": "https://github.com/0GiS0/audio-azure-functions.git",
    "branch": "master"
  },
  "resources": [
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2016-02-01-preview",
      "name": "[parameters('accounts_audio_azure_functions_speech_name')]",
      "location": "northeurope",
      "sku": {
        "name": "S0"
      },
      "kind": "SpeechServices",
      "properties": {}
    },
    {
      "type": "microsoft.insights/components",
      "apiVersion": "2015-05-01",
      "name": "[parameters('components_audio_azure_functions_insights_name')]",
      "location": "northeurope",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-07-01",
      "name": "[parameters('storageAccounts_audioazurefunctionstore_name')]",
      "location": "northeurope",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": false,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[parameters('serverfarms_audio_azure_functions_plan_name')]",
      "location": "North Europe",
      "sku": {
        "name": "S1",
        "tier": "Standard",
        "size": "S1",
        "family": "S",
        "capacity": 1
      },
      "kind": "app",
      "properties": {
        "name": "[parameters('serverfarms_audio_azure_functions_plan_name')]",
        "perSiteScaling": false,
        "reserved": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[parameters('sites_audio_azure_functions_name')]",
      "location": "North Europe",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_audio_azure_functions_plan_name'))]"
      ],
      "kind": "functionapp",
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsDashboard",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccounts_audioazurefunctionstore_name'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_audioazurefunctionstore_name')), '2015-05-01-preview').key1)]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccounts_audioazurefunctionstore_name'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_audioazurefunctionstore_name')), '2015-05-01-preview').key1)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccounts_audioazurefunctionstore_name'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_audioazurefunctionstore_name')), '2015-05-01-preview').key1)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[variables('contentShareName')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "SpeechKey",
              "value": "[listKeys(parameters('accounts_audio_azure_functions_speech_name'),'2016-02-01-preview').key1]"
            },
            {
              "name": "SpeechRegion",
              "value": "northeurope"
            },
            {
              "name": "ffmpegPath",
              "value": "D:\\home\\site\\wwwroot\\tools\\ffmpeg.exe"
            },
            {
              "name": "SpeechLanguage",
              "value": "[toLower(parameters('SpeechLanguage'))]"
            }
          ]
        },
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(parameters('sites_audio_azure_functions_name'), '.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(parameters('sites_audio_azure_functions_name'), '.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_audio_azure_functions_plan_name'))]",
        "reserved": false,
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": false,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 1536,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": false
      }
    },
    {
      "name": "[concat(parameters('sites_audio_azure_functions_name'), '/web')]",
      "type": "Microsoft.Web/sites/sourcecontrols",
      "apiVersion": "2018-02-01",
      "properties": {
        "repoUrl": "[variables('repoURL')]",
        "branch": "[variables('branch')]",
        "isManualIntegration": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('sites_audio_azure_functions_name'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('sites_audio_azure_functions_name'), '/web')]",
      "location": "North Europe",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('sites_audio_azure_functions_name'))]"
      ],
      "properties": {
        "numberOfWorkers": 1,
        "defaultDocuments": [
          "Default.htm",
          "Default.html",
          "Default.asp",
          "index.htm",
          "index.html",
          "iisstart.htm",
          "default.aspx",
          "index.php"
        ],
        "netFrameworkVersion": "v4.0",
        "phpVersion": "5.6",
        "pythonVersion": "",
        "nodeVersion": "",
        "linuxFxVersion": "",
        "requestTracingEnabled": false,
        "remoteDebuggingEnabled": false,
        "httpLoggingEnabled": false,
        "logsDirectorySizeLimit": 35,
        "detailedErrorLoggingEnabled": false,
        "publishingUsername": "$audio-azure-functions",
        "scmType": "None",
        "use32BitWorkerProcess": true,
        "webSocketsEnabled": false,
        "alwaysOn": true,
        "appCommandLine": "",
        "managedPipelineMode": "Integrated",
        "virtualApplications": [
          {
            "virtualPath": "/",
            "physicalPath": "site\\wwwroot",
            "preloadEnabled": true,
            "virtualDirectories": null
          }
        ],
        "winAuthAdminState": 0,
        "winAuthTenantState": 0,
        "customAppPoolIdentityAdminState": false,
        "customAppPoolIdentityTenantState": false,
        "loadBalancing": "LeastRequests",
        "routingRules": [],
        "experiments": {
          "rampUpRules": []
        },
        "autoHealEnabled": false,
        "vnetName": "",
        "siteAuthEnabled": false,
        "siteAuthSettings": {
          "enabled": null,
          "unauthenticatedClientAction": null,
          "tokenStoreEnabled": null,
          "allowedExternalRedirectUrls": null,
          "defaultProvider": null,
          "clientId": null,
          "clientSecret": null,
          "clientSecretCertificateThumbprint": null,
          "issuer": null,
          "allowedAudiences": null,
          "additionalLoginParams": null,
          "isAadAutoProvisioned": false,
          "googleClientId": null,
          "googleClientSecret": null,
          "googleOAuthScopes": null,
          "facebookAppId": null,
          "facebookAppSecret": null,
          "facebookOAuthScopes": null,
          "twitterConsumerKey": null,
          "twitterConsumerSecret": null,
          "microsoftAccountClientId": null,
          "microsoftAccountClientSecret": null,
          "microsoftAccountOAuthScopes": null
        },
        "cors": {
          "allowedOrigins": [
            "https://functions.azure.com",
            "https://functions-staging.azure.com",
            "https://functions-next.azure.com"
          ],
          "supportCredentials": false
        },
        "localMySqlEnabled": false,
        "http20Enabled": false,
        "minTlsVersion": "1.2",
        "ftpsState": "AllAllowed",
        "reservedInstanceCount": 0
      }
    },
    {
      "type": "Microsoft.Web/sites/hostNameBindings",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('sites_audio_azure_functions_name'), '/', parameters('sites_audio_azure_functions_name'), '.azurewebsites.net')]",
      "location": "North Europe",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('sites_audio_azure_functions_name'))]"
      ],
      "properties": {
        "siteName": "audio-azure-functions",
        "hostNameType": "Verified"
      }
    }
  ],
  "outputs": {
    "speech-region": {
      "type": "object",
      "value": "[reference(parameters('accounts_audio_azure_functions_speech_name'),'2016-02-01-preview')]"
    }
  }
}